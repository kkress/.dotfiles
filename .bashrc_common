#Common accross all hosts

# colors for ls, etc.
#eval `dircolors -b /etc/DIR_COLORS`
alias d="ls --color"
alias ls="ls --color=auto"
alias ll="ls --color -l"

PATH=${PATH}:/sbin:/usr/sbin:$HOME/bin:/usr/local/bin

HISTFILESIZE=5000
export PROMPT_COMMAND="history -a; history -c; history -r; $PROMPT_COMMAND"
shopt -s histappend

